<%- include('../partials/header') %>

<h2 class="section-title" data-aos="fade-up">Experience</h2>

<div style="max-width: 800px; margin: 0 auto; position: relative; padding-left: 20px;">
    <!-- Timeline Line -->
    <div style="position: absolute; left: 0; top: 0; bottom: 0; width: 4px; background: #ddd; border-radius: 2px;"></div>

    <% if (experiences.length > 0) { %>
        <% experiences.forEach((exp, index) => { %>
            <div class="card" style="border-left: 4px solid var(--secondary-color); position: relative; margin-left: 20px;" 
                 data-aos="<%= index % 2 === 0 ? 'fade-right' : 'fade-left' %>" 
                 data-aos-delay="<%= index * 200 %>">
                
                <!-- Timeline Dot -->
                <div style="position: absolute; left: -34px; top: 20px; width: 16px; height: 16px; background: var(--secondary-color); border-radius: 50%; border: 4px solid #fff;"></div>

                <h3><%= exp.role %></h3>
                <h4 style="color: #666;"><%= exp.company %></h4>
                <p style="font-style: italic; font-size: 0.9rem; color: #888;">
                    <%= new Date(exp.startDate).toLocaleDateString() %> - 
                    <%= exp.endDate ? new Date(exp.endDate).toLocaleDateString() : 'Present' %>
                </p>
                <p style="margin-top: 1rem;"><%= exp.description %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p style="margin-left: 20px;">No experience added yet.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
