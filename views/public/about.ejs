<%- include('../partials/header') %>

<h2 class="section-title" data-aos="fade-up">About Me</h2>

<div class="card" data-aos="fade-up" data-aos-delay="200">
    <% if (about) { %>
        <div style="display: flex; gap: 2rem; align-items: flex-start; flex-wrap: wrap;">
            <% if (about.profileImage) { %>
                <img src="<%= about.profileImage %>" alt="<%= about.name %>" style="width: 200px; border-radius: 8px;" data-aos="zoom-in" data-aos-delay="400">
            <% } %>
            <div data-aos="fade-left" data-aos-delay="500">
                <h3><%= about.name %></h3>
                <h4 style="color: var(--secondary-color);"><%= about.role %></h4>
                <p style="white-space: pre-line;"><%= about.bio %></p>
            </div>
        </div>
    <% } else { %>
        <p>About information not yet added.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
