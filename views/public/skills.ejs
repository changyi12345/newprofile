<%- include('../partials/header') %>

<h2 class="section-title" data-aos="fade-up">My Skills</h2>

<div class="grid">
    <% if (skills.length > 0) { %>
        <% skills.forEach((skill, index) => { %>
            <div class="card" style="text-align: center;" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                <h3><%= skill.name %></h3>
                <span style="
                    display: inline-block; 
                    padding: 0.25rem 0.5rem; 
                    border-radius: 4px; 
                    font-size: 0.9rem;
                    background: <%= skill.level === 'Advanced' ? '#2ecc71' : skill.level === 'Intermediate' ? '#3498db' : '#f1c40f' %>;
                    color: #fff;
                    transition: transform 0.3s ease;
                ">
                    <%= skill.level %>
                </span>
            </div>
        <% }) %>
    <% } else { %>
        <p>No skills added yet.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
